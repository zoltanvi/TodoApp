<UserControl
    x:Class="Modules.RecycleBin.Views.Controls.RecycleBinTaskItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Modules.Tasks.TextEditor.Controls;assembly=Modules.Tasks.TextEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Modules.RecycleBin.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:Modules.RecycleBin.Views.Pages"
    d:DataContext="{d:DesignInstance pages:RecycleBinTaskItemViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0 3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Width="5"
            Background="{Binding MarkerColor, Converter={StaticResource StringRgbToBrushConverter}}"
            CornerRadius="3 0 0 3" />
        <Border
            Grid.Column="1"
            BorderBrush="{Binding BorderColor, Converter={StaticResource TaskBorderBrushConverter}}"
            BorderThickness="1">
            
            <Grid>
                <Border Background="{Binding BackgroundColor, Converter={StaticResource StringRgbToBrushConverter}}" Opacity="0.3" CornerRadius="3"></Border>
                
                <controls:BasicTextEditorBox
                    Background="Transparent"
                    BorderThickness="0"
                    DocumentContent="{Binding Content}"
                    IsReadOnly="True" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
