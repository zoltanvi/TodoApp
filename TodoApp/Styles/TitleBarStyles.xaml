        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ErrorContainer}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>