<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:valueConverters="clr-namespace:TodoApp.ValueConverters">

    <valueConverters:BoolToBorderThicknessConverter x:Key="BoolToBorderThicknessConverter"/>
    <valueConverters:AppBorderBrushConverter x:Key="AppBorderBrushConverter"/>
    <valueConverters:TitleBarHeightConverter x:Key="TitleBarHeightConverter"/>
    <valueConverters:TitleBarHeightToGridLengthConverter x:Key="TitleBarHeightToGridLengthConverter"/>

    <valueConverters:BoolToRoundedCornerRadiusConverter x:Key="BoolToRoundedCornerRadiusConverter" TopLeft="True" TopRight="True" BottomLeft="True" BottomRight="True"/>
    <valueConverters:BoolToRoundedCornerRadiusConverter x:Key="BoolToRoundedCornerRadiusTopConverter" TopLeft="True" TopRight="True"/>
    <valueConverters:BoolToRoundedCornerRadiusConverter x:Key="BoolToRoundedCornerRadiusTopLeftConverter" TopLeft="True" />
    <valueConverters:BoolToRoundedCornerRadiusConverter x:Key="BoolToRoundedCornerRadiusTopRightConverter" TopRight="True"/>

    <valueConverters:BoolToRoundedCornerRadiusDoubleConverter x:Key="BoolToRoundedCornerRadiusDoubleConverter"/>
    <valueConverters:AppBorderThicknessConverter x:Key="AppBorderThicknessConverter" Offset="1"/>
    <valueConverters:AppBorderThicknessConverter x:Key="AppBorderThicknessToMarginConverter" Offset="-0.5"/>

</ResourceDictionary>